      zoom = 1, vwidth = 1000)
gtsave(table, paste0(path,"4_R-exported/2-Netzero/CAT_rExport_RatingsDetails-2-NetZero__ABCDEFG.png"), 
      zoom = 1, vwidth = 1000)
